{
  "manifest_version": 3,
  "name": "Smart Web Annotator",
  "version": "1.0",
  "description": "Capture and annotate webpages with visual feedback tools.",
  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
